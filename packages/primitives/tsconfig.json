{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@homunculus/core": ["../core/dist/index.d.ts"],
      "@homunculus/semantic-engine": ["../semantic-engine/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "dist", "node_modules"],
  "references": [
    { "path": "../core" },
    { "path": "../semantic-engine" }
  ]
}
